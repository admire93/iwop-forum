<h1>Listing threads</h1>

<table>
  <tr>
    <th>Forum</th>
    <th>Thread</th>
  </tr>

<% @threads.each do |thread| %>
  <tr>
    <td><%=h thread.forum_id %></td>
    <td><%=h thread.thread %></td>
    <td><%= link_to 'Show', thread %></td>
    <td><%= link_to 'Edit', edit_thread_path(thread) %></td>
    <td><%= link_to 'Destroy', thread, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New thread', new_thread_path %>